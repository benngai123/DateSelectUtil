<resources>

	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<!--<item name="android:windowAnimationStyle">@style/animation_left_right</item>-->
		<item name="android:windowNoTitle">true</item>
	</style>

	<style name="dialog_custom" parent="android:style/Theme.Dialog">
		<item name="android:background">#00000000</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowIsFloating">true</item>
	</style>

	<style name="dlg_title">
		<item name="android:paddingLeft">5dp</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="dlg_content_text">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">@dimen/txtSize16</item>
		<item name="android:minHeight">@dimen/height80</item>
		<item name="android:minWidth">@dimen/width200</item>
		<item name="android:paddingTop">@dimen/padding15</item>
		<item name="android:paddingBottom">@dimen/padding15</item>
		<item name="android:paddingLeft">@dimen/padding15</item>
		<item name="android:paddingRight">@dimen/padding15</item>
	</style>

	<style name="btn_positive" parent="@style/Widget.AppCompat.Button.Borderless">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:minWidth">@dimen/width130</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">@dimen/txtSize18</item>

	</style>

	<style name="btn_positive2">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">@dimen/height40</item>
		<item name="android:minWidth">@dimen/width130</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="btn_positive3">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">@dimen/height40</item>
		<item name="android:minWidth">@dimen/width130</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="btn_negative" parent="btn_positive">
		<item name="android:textAllCaps">false</item>
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="btn_negative2" parent="btn_positive2">
		<item name="android:textAllCaps">false</item>
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="btn_negative3" parent="btn_positive3">
		<item name="android:textAllCaps">false</item>
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="toolbar_normal">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:minHeight">@dimen/height30</item>
		<item name="android:gravity">center|center_horizontal</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:paddingTop">@dimen/padding2</item>
		<item name="android:paddingBottom">@dimen/padding2</item>
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="horizontal_line1">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/height1</item>
	</style>

	<style name="horizontal_line2">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/height1</item>
		<item name="android:layout_marginRight">20dp</item>
		<item name="android:layout_marginLeft">20dp</item>
	</style>

	<style name="horizontal_line3">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">@dimen/height1</item>
		<item name="android:layout_marginRight">10dp</item>
		<item name="android:layout_marginLeft">10dp</item>
	</style>

	<style name="horizontal_line4">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/height1</item>
		<item name="android:layout_marginLeft">@dimen/margin10</item>
		<item name="android:layout_marginRight">@dimen/margin10</item>
	</style>

	<style name="horizontal_line5">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/height1</item>
		<item name="android:layout_marginLeft">@dimen/margin10</item>
	</style>

	<style name="horizontal_line6">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/height0.5</item>
	</style>

	<style name="vertical_line1">
		<item name="android:layout_width">@dimen/width0.3</item>
		<item name="android:layout_height">match_parent</item>
	</style>

	<style name="vertical_line2">
		<item name="android:layout_width">@dimen/width0.3</item>
		<item name="android:layout_height">@dimen/height16</item>
	</style>

	<style name="AnimBottom" parent="@android:style/Animation">
		<item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
		<item name="android:windowExitAnimation">@anim/push_bottom_out</item>
	</style>

	<style name="dlg_btn">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:minHeight">@dimen/height40</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:textSize">@dimen/txtSize16</item>
	</style>

</resources>
